{
    # 全局日志格式设置
    log {
        format json {
            # 使用ISO 9075格式（例：2025-06-02 18:48:15）
            time_format iso9075
            # 启用本地时区（默认UTC）
            time_local
        }
    }
}

# 站点配置
:8080 {
    # 设置网站根目录
    root * /www
    # 启用静态文件服务
    file_server
    # 启用压缩
    encode zstd gzip
    # 单页应用路由支持
    try_files {path} /index.html
}